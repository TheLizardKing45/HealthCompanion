<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BodyMenuActivity">

    <Button
            android:text="Go back to Goals menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goalsButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    <Button
            android:text="Go to Exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exerciseButton"
            app:layout_constraintBottom_toTopOf="@+id/goalsButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <Button
            android:text="Go to Blood Pressure Analysis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bloodButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/exerciseButton" />

    <Button
            android:text="Go back to Weight Analysis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weightButton"
            app:layout_constraintBottom_toTopOf="@+id/bloodButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>