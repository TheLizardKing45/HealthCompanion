<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.body.BodyHealthBloodActivity">

    <Button
            android:text="Go back to body menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bodyHealthMenuButton"
            tools:layout_editor_absoluteX="107dp"
            app:layout_constraintBottom_toBottomOf="parent" />

    <com.jjoe64.graphview.GraphView
            android:layout_width="277dp"
            android:layout_height="610dp"
            android:id="@+id/bloodGraph"
            tools:layout_editor_absoluteX="67dp"
            app:layout_constraintTop_toTopOf="parent" />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/bloodInput"
            app:layout_constraintBottom_toTopOf="@+id/bodyHealthMenuButton"
            app:layout_constraintTop_toBottomOf="@+id/bloodGraph"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bloodSubmit"
            tools:layout_editor_absoluteY="606dp"
            app:layout_constraintStart_toEndOf="@+id/bloodInput" />


</androidx.constraintlayout.widget.ConstraintLayout>